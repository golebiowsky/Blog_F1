@model List<Blog_F1.Models.Domain.BlogPost>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Wszystkie Posty na Blogu - Funkcja Admina</h1>
    </div>

</div>

<div class="container py-5">
    @if(Model!=null && Model.Any())
    {
    <table class="table"> 
        <thead>
            <tr>
                <td>Id</td>
                <td>Nagłówek</td>
                <td>Tagi</td>
                <td> </td>
            </tr>
        </thead>
        <tbody>
            @foreach(var blogPost in Model)
            {
                <tr>
                    <td>@blogPost.Id</td>
                    <td>@blogPost.Naglowek</td>
                    <td>
                        <div class="d-flex">
                            @foreach(var tag in blogPost.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }
                        </div>
                    </td>
                    <td>
                        <a asp-area="" asp-controller="AdminBlogPosts" asp-action="Edit" asp-route-id="@blogPost.Id">Edit 

                        </a>
                    </td>
                </tr>
            }
        </tbody>
        </table>
    }
    else
    {
        <p>Nie znaleziono Postów na Blogu!</p>
    }
</div>
